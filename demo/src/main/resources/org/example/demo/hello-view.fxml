<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #3d3d3d;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
  <children>
      <VBox alignment="CENTER" fillWidth="false" style="-fx-background-color: gray;">
         <children>
            <TextField fx:id="textfield_mail" prefWidth="250.0" promptText="mail">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="textfield_pass" prefWidth="250.0" promptText="pass">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" prefWidth="250.0" style="-fx-background-color: #5900ff;" text="Login" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="50.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="300.0" right="300.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="200.0" top="200.0" />
         </padding>
      </VBox>
   </children>
</VBox>
